<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--When the button is not enabled-->
    <item android:color="@color/sysDarkBlue" android:state_enabled="false" />
    <!--When button is enabled-->
    <item android:color="@color/sysDarkBlue" android:state_selected="true" />
    <!--When Button is in pressed state -->
    <item android:color="@color/sysDarkBlue" android:state_pressed="true" />

    <!--Default Text Color-->
    <item android:color="@color/sysLightBlue" />
</selector>